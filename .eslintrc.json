{
  "extends": ["airbnb", "prettier"],
  "plugins": ["flowtype"],
  "rules": {
    "semi": ["warn", "never"],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
  },
  "parser": "babel-eslint",
  "globals": {
    "graphql": true
  },
  "env": {
    "browser": true,
    "node": true
  }
}
